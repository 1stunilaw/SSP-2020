<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd ">

    <changeSet id="2020-11-09T18-01--create-user-table" author="Konstantin Egorov">
        <createTable tableName="users">
            <column name="id" type="UUID"/>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            DROP TABLE users;
        </rollback>
    </changeSet>

    <changeSet id="2020-11-09T18-01--add-default-status-to-user-table" author="Konstantin Egorov">
        <addDefaultValue tableName="users" columnName="status" defaultValue="ACTIVE"/>
    </changeSet>

    <changeSet id="2020-11-09T18-01--add-pk-user-table" author="Konstantin Egorov">
        <addPrimaryKey tableName="users" columnNames="id"/>
        <rollback>
            ALTER TABLE tasks DROP CONSTRAINT users_pkey;
        </rollback>
        <rollback>
            ALTER TABLE tasks DROP CONSTRAINT users_pkey;
        </rollback>
    </changeSet>

</databaseChangeLog>