<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd ">

    <changeSet id="2020-11-09T18-06--create-roles-table" author="Konstantin Egorov">
        <!--Insert XML changes objects here https://www.liquibase.org/documentation/xml_format.html-->
        <createTable tableName="roles">
            <column name="id" type="UUID"/>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            DROP TABLE roles;
        </rollback>
    </changeSet>

    <changeSet id="2020-11-09T18-06--add-pk-roles-table" author="Konstantin Egorov">
        <addPrimaryKey tableName="roles" columnNames="id"/>
        <rollback>
            ALTER TABLE tasks DROP CONSTRAINT roles_pkey;
        </rollback>
    </changeSet>

</databaseChangeLog>