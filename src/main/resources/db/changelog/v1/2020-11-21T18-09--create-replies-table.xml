<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd ">

    <changeSet id="2020-11-21T18-09--create-replies-table" author="Podkorytova Renata">
        <!--Insert XML changes objects here https://www.liquibase.org/documentation/xml_format.html-->
        <createTable tableName="replies">
            <column name="question_id" type="UUID"/>
            <column name="answer_id" type="UUID"/>
        </createTable>
        <rollback>
            DROP TABLE replies;
        </rollback>
    </changeSet>

    <changeSet id="2020-11-21T18-09--add-user-fk-user-roles-table" author="Podkorytova Renata">
        <addForeignKeyConstraint baseColumnNames="question_id"
                                 baseTableName="replies"
                                 constraintName="fk_replies_question"
                                 onDelete="SET NULL"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="comment"/>

        <addForeignKeyConstraint baseColumnNames="answer_id"
                                 baseTableName="replies"
                                 constraintName="fk_replies_answers"
                                 onDelete="SET NULL"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="comment"/>
    </changeSet>
</databaseChangeLog>