<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2020-11-23T02-16--add-column-number-in-orders-table" author="Anton Kharchenko">
        <addColumn tableName="orders">
            <column name="number" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="2020-11-23T02-18--add-add-autoincrement-for-number" author="Anton Kharchenko">
        <addAutoIncrement tableName="orders" columnName="number"
                          incrementBy="1"
        />
    </changeSet>
</databaseChangeLog>