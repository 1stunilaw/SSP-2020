<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2020-11-13T19-35--create-tags-table" author="Anton Kharchenko" >
        <createTable tableName="tags">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="tag_name" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="tags"/>
        </rollback>
    </changeSet>

    <changeSet id="2020-11-13T19-45--add-pk-tags-table" author="Anton Kharchenko">
        <addPrimaryKey tableName="tags" columnNames="id"/>
        <rollback>
            <dropPrimaryKey tableName="types"/>
        </rollback>
    </changeSet>
</databaseChangeLog>