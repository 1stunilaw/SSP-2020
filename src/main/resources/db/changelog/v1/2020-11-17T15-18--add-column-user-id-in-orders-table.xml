<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2020-11-17T15-18--add-column-user-id-in-orders-table" author="Anton Kharchenko">

        <addColumn tableName="orders">
            <column name="user_id" type="uuid">
                <constraints nullable="false" references="users(id)" deleteCascade="true" foreignKeyName="fk_user"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn columnName="order_id"
                        tableName="users"/>
        </rollback>
    </changeSet>
</databaseChangeLog>