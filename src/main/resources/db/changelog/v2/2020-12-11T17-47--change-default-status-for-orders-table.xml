<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2020-12-11T17-47--drop-status" author="Anton Kharchenko">
        <dropColumn
                tableName="orders">
            <column name="status"/>
        </dropColumn>
    </changeSet>
    <changeSet id="2020-12-11T17-47--add-status" author="Anton Kharchenko">
        <addColumn tableName="orders">
            <column name="status" type="VARCHAR(35)"  defaultValue="WAITING_OFFERS">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn columnName="status"
                        tableName="orders"/>
        </rollback>
    </changeSet>
</databaseChangeLog>