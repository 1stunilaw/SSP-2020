<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd ">
    <changeSet id="2020-11-18T16-38--create-law-statuses-table" author="Konstantin Egorov">
        <createTable tableName="law_statuses">
            <column name="id" type="UUID"/>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            DROP TABLE law_statuses;
        </rollback>
    </changeSet>
    <changeSet id="2020-11-18T16-39--law-statuses-table-pk" author="Konstantin Egorov">
        <addPrimaryKey tableName="law_statuses" columnNames="id"/>
        <rollback>
            ALTER TABLE law_statuses DROP CONSTRAINT law_statuses_pkey;
        </rollback>
    </changeSet>
</databaseChangeLog>